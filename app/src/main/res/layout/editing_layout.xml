<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey"
    tools:context="com.example.picturemashup.EditingActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/contactFrame"
        android:orientation="vertical">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/editingViewMainGroup"
        android:orientation="vertical"
        >

    <TextView
        android:typeface="serif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/app_name"
        android:layout_marginTop="10dp"
        android:textColor="@color/title"
        android:textSize="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/cameraLayout"
        android:layout_marginTop="20dp"
        android:layout_width="375dp"
        android:layout_gravity="center"
        android:background="@color/colorPrimaryDark"
        android:layout_height="400dp"  >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:id="@+id/pasteImage" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="100dp"
        android:orientation="horizontal" >

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="18dp"
            android:src="@drawable/camera_foreground"
            android:background="@color/colorPrimaryDark"
            android:onClick="launchCameraIntent" >
        </ImageButton>

        <Button
            android:layout_width="100dp"
            android:typeface="serif"
            android:layout_marginLeft="45dp"
            android:background="@color/colorPrimary"
            android:layout_height="90dp"
            android:textColor="@color/colorAccent"
            android:text="CLEAR WORK"
            android:textSize="20dp"
            android:onClick="restart"></Button>

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/share_foreground"
            android:background="@color/colorPrimaryDark"
            android:onClick="launchShareIntent"
             >
        </ImageButton>
    </LinearLayout>
    </LinearLayout>

</LinearLayout>