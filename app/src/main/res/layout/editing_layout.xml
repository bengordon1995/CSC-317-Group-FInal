<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey"
    tools:context="com.example.picturemashup.flickrImageSearchActivity">

    <TextView
        android:typeface="serif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/app_name"
        android:layout_marginTop="10dp"
        android:textColor="@color/title"
        android:textSize="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/cameraLayout"
        android:layout_marginTop="20dp"
        android:layout_width="375dp"
        android:layout_gravity="center"
        android:background="@color/colorPrimary"
        android:layout_height="500dp"  >

        <TextView
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="75dp"
            android:gravity="center"
            android:text="**background should appear here**"
            android:textColor="@color/colorAccent"
            android:textSize="35sp"
            android:typeface="serif" >

        </TextView>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="100dp"
        android:orientation="horizontal" >

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="18dp"
            android:src="@drawable/cam_foreground"
            android:background="@color/colorPrimary" >
        </ImageButton>

        <Button
            android:layout_width="100dp"
            android:typeface="serif"
            android:layout_marginLeft="45dp"
            android:background="@color/colorPrimary"
            android:layout_height="90dp"
            android:textColor="@color/colorAccent"
            android:text="CLEAR WORK"
            android:textSize="20dp" ></Button>



        <ImageButton
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="52dp"
            android:src="@drawable/share_foreground"
            android:background="@color/colorPrimary" >
        </ImageButton>






    </LinearLayout>



</LinearLayout>